    pod 'SDWebImage',                '~> 3.7.5'
    pod 'TTTAttributedLabel',        '~> 1.13.3'
    pod 'Firebase/Core',             '~> 4.0'
end

target 'EmbassatTests' do
    pod 'ShareKit/Facebook',         :git => "https://github.com/joanromano/ShareKit.git"
